{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" style="display: block;" novalidate="novalidate" method="POST" class="register-form">    
    {{ form_widget(form._token) }}
    <h3 class="font-green">Sign Up</h3>
    <p class="hint"> Enter your personal details below: </p>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Email</label>
        {{ form_widget(form.email, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Email'} }) }}
    </div>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        {{ form_widget(form.username, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Username'} }) }}
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder': 'Password', 'autocomplete':'off'} }) }}  
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Repeat Password</label>
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder': 'Repeat Password', 'autocomplete':'off'} }) }}  
    </div>
    <div class="form-actions">
        {#        <button type="button" id="register-back-btn" class="btn btn-default">Back</button>#}
        <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit</button>
    </div>
</form>

